@section scripts{
    <script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>
        $(function () {
            var chat = $.connection.chatHub,
                group;
          
            chat.client.postMessage = function (user, msg) {
                messages.append("<p><span><a href='#' class='link'>" + user + "</a>: " + msg + "</span></p>");
                messages[0].scrollTop = messages[0].scrollHeight;
            };
            chat.client.setGroupName = function(grp) {
                group = grp;
            };
            $.connection.hub.start().done(function () {
                $("#buttonSend").click(function () {
                    if (group == undefined) {
                        chat.server.broadcastMessage($("#txtInput").val());
                    } else {
                        chat.server.pointToPointMessage(group, $("#txtInput").val());
                    }
                    $("#txtInput").val("").focus();
                });
                $(document).on("click", ".link", function(e) {
                    chat.server.joinGroup($(e.target).html());
                });
            });
            $(document).keypress(function (event) {
                var keycode = (event.keyCode ? event.keyCode : event.which);
                if (keycode == "13") {
                    $("#buttonSend").click();
                }
            });
            var messages = $("#messages");
            messages[0].scrollTop = messages[0].scrollHeight;
        });
    </script>
}

<div class="jumbotron">
    <h1>SignalR Chat</h1>
</div>
<div>
    <div class="panel panel-default">
        <div class="panel-heading">Messages</div>
        <div class="panel-body">
            <div id="messages" style="height: 200px; overflow: hidden"></div>
            <div class="input-group">
                <input type="text" id="txtInput" class="form-control" placeholder="Chat message" />
                <span id="buttonSend" class="input-group-addon">Send</span>
            </div>
        </div>
    </div>
</div>